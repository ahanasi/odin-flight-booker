<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<%= simple_form_for :search, url: root_path, method: "GET", html: { class: "form-inline" } do |f| %>

  <div class="form-inputs">

    <%= f.input :from_airport_id, label: "From: ", wrapper: false do %>
      <%= f.select :from_airport_id, @airport_options, class: "form-control", wrapper: false %>
    <% end %>

    <%= f.input :to_airport_id, label: "To: " do %>
      <%= f.select :to_airport_id, @airport_options, class: "form-control" %>
    <% end %>

    <%= f.input :num_tickets, label: "No. of Passengers: ", wrapper: false do %>
       <%= f.select :num_tickets, 1..4, class: "form-control" %>
    <% end %>

    <%= f.input :start_time, as: :date, :order => [:month, :day, :year], label: "Date: ", wrapper: false do %>
       <%= f.select :start_time, @date_options, class: "form-control" %>
    <% end %>

  </div>

  <%= f.submit "Search" %>
  
<% end %>

<br>

<div> 
  <% @flights.each do |flt| %>
    <%= flt.from_airport.name %>, <%= flt.to_airport.name %>, <%= flt.start_time %>
    <hr>
  <% end %>
</div>

